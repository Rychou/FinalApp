<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end">

    <TextView
        android:id="@+id/cost_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cost_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-" />

    <TextView
        android:id="@+id/cost_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cost_way" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/cost_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="500" />
    </LinearLayout>
</LinearLayout>
